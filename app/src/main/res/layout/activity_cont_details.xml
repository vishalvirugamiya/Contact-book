<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:gravity="top"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cont_Details">

<LinearLayout
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_60sdp"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#fff"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/back"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="34dp"
        android:background="@drawable/backk" />

    <LinearLayout
        android:layout_marginLeft="@dimen/_90sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/starr"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"/>

        <ImageView
            android:id="@+id/editBT"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/adit1" />

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="wrap_content"
            app:menu="@menu/contact_menu"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Primary"
            app:collapseIcon="@color/white"
            android:backgroundTint="#fff"
            android:layout_gravity="center"
            android:background="@color/white"
            app:subtitleTextColor="@color/white"
            android:id="@+id/toappbar"
            android:layout_height="@dimen/_40sdp"/>



    </LinearLayout>




</LinearLayout>


    <ImageView
        android:id="@+id/genderMF"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_30sdp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_gravity="center"
                android:layout_margin="@dimen/_4sdp"
                android:background="@drawable/calll"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

            <TextView
                android:id="@+id/MobileNum"
                android:layout_width="@dimen/_210sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"
                android:gravity="left"
                android:text="Mobile NO."
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp" />

            <ImageView
                android:layout_gravity="center"
                android:layout_margin="@dimen/_3sdp"
                android:background="@drawable/videocall"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8sdp"
                android:background="@drawable/shape"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"
                android:text="Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/gmail"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8sdp"
                android:background="@drawable/shape"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"
                android:text="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/birth"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8sdp"
                android:background="@drawable/shape"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"
                android:text="Birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/shape"
                android:fontFamily="@font/font2"
                android:paddingLeft="@dimen/_8sdp"
                android:text="Address"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp" />


            <TextView
                android:id="@+id/gender"
                android:layout_margin="@dimen/_10sdp"
                android:textSize="@dimen/_16ssp"
                android:paddingLeft="@dimen/_8sdp"
                android:background="@drawable/shape"
                android:fontFamily="@font/font2"
                android:textColor="@color/black"
                android:text="Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>



</LinearLayout>